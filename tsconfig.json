{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "stripInternal": true,
    "alwaysStrict": true,
    "module": "esnext",
    "target": "esnext",
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "src/ts/ziggy-route/*"
      ],
      "@vite/*": [
        "./src/ts/vite-plugin/*"
      ],
      "@ts/*": [
        "./src/ts/*"
      ]
    }
  },
  "include": [
    "src/ts"
  ],
  "exclude": [
    "vendor",
    "node_modules",
    "dist",
    "test",
    "**/*.test.ts",
    "tests/fixtures"
  ]
}
